{
  "name": "backend-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json",
    "migration": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js --config src/database/config/migration.config.ts",
    "seeder": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js --config src/database/config/seeder.config.ts",
    "migrate:create": "npm run migration migration:create -- -n",
    "migrate:generate": "npm run migration migration:generate -- -n",
    "migrate:latest": "npm run migration migration:run",
    "migrate:rollback": "npm run migration migration:revert",
    "seeder:create": "npm run seeder migration:create -- -n",
    "seeder:generate": "npm run seeder migration:generate -- -n",
    "seeder:latest": "npm run seeder migration:run",
    "seeder:rollback": "npm run seeder migration:revert",
    "schema:drop": "npm run migration schema:drop",
    "schema:sync": "npm run migration schema:sync",
    "proto:gen": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. src/**/**/proto/*.proto --ts_proto_opt=fileSuffix=.grpc --ts_proto_opt=nestJs=true --ts_proto_opt=addGrpcMetadata=true"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.6.10",
    "@grpc/proto-loader": "^0.7.2",
    "@nestjs/common": "8.0.0",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "8.0.0",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/microservices": "8.0.0",
    "@nestjs/typeorm": "8.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "kafkajs": "^2.2.0",
    "lodash.isempty": "^4.4.0",
    "pg": "8.7.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.2.0",
    "slugify": "^1.6.5",
    "ts-proto": "^1.122.0",
    "typeorm": "^0.2.34",
    "typeorm-transactional-cls-hooked": "^0.1.21"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-angular": "16.2.3",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/jest": "27.4.1",
    "@types/lodash.isempty": "^4.4.7",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "rimraf": "3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      ".module.ts",
      "client",
      "dtos"
    ]
  }
}
